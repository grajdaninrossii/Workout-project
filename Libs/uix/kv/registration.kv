#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<RegisterLaybelR@MDLabel>:
    size_hint_y: None
    height: self.texture_size[1]
    halign: "center"
    theme_text_color: "Custom"
    text_color: 1, 1, 1, 1

<TextFieldR@MDTextField>:
    #mode: "fill"
    fill_color: 0, 0, 0, .2
    icon_right_color: 1, 1, 1, 0.9
    color_mode: 'custom'
    max_text_length: 20
    line_color_focus: app.theme_cls.accent_color
    current_hint_text_color: 1, 1, 1, 0.8



<ButtonLoginR@MDFillRoundFlatButton>:
    font_size: 20
    pos_hint: {"center_x": .5}
    theme_text_color: "Custom"
    #
    # size_hint: 1, None
    # height: dp(46)



<BoxR@MDBoxLayout>:
    orientation: "vertical"
    md_bg_color: 0.21, 0.21, 0.25, 1


<Registration>:
    name: "registration"

    new_login: new_login
    new_password: new_password
    new_password_p: new_password_p
    phone: phone
    condition_enter: condition_enter

    BoxR:
        pos_hint: {"center_x": 0.5 , "top": 1}

        # Toolbar
        SetToolbar:
        ScrollView:
            MDGridLayout:
                size_hint_y: None
                height: self.minimum_height
                padding: 15
                cols: 1
                spacing: dp(3)


                RegisterLaybelR:
                    id: Register
                    text_size: self.size
                    font_size: dp(35)
                    text: "Регистрация"


                RegisterLaybelR:
                    id: condition_enter
                    text_size: self.size
                    font_size: dp(18)
                    text: "Введите данные"
                    text_color: 0.12, 0.73, 0.50, 1

                # Можно регулировать для норм отображения(также зависит от нижнего Widget)
                Widget:
                    size_hint_y: None
                    height: dp(500)


                BoxR:
                    padding: dp(20), 0, dp(20), 0
                    spacing: dp(15)

                    # LOGIN
                    TextFieldR:
                        id: new_login
                        icon_right: "mail"
                        hint_text: 'Имя'

                    # ПАРОЛЬ
                    TextFieldR:
                        id: new_password
                        icon_left: 'key-variant'
                        icon_right: 'eye-off'
                        hint_text: 'Пароль'
                        password: True

                    # Подтверждение пароля
                    TextFieldR:
                        id: new_password_p
                        icon_left: 'key-variant'
                        icon_right: 'eye-off'
                        hint_text: 'Подтверждение пароля'
                        password: True

                    # Телефон
                    TextFieldR:
                        id: phone
                        icon_right: "mail"
                        hint_text: 'Телефон: 88005553535'
                        #text: '+'

                    # Можно регулировать для норм отображения(также зависит от верхнего Widget)
                    Widget:
                        size_hint_y: None
                        height: dp(50)


                    ButtonLoginR:
                        id: Register_btn
                        text: "Зарегистрироваться"
                        md_bg_color:  0.12, 0.73, 0.5, 0.3
                        text_color: 1, 1, 1, 0.95
                        on_press:
                            add_user = root.add_user()
                            if add_user == 0: app.changeScreen("menu")

                    ButtonLoginR:
                        id: Register_button
                        text: "    Назад    "
                        md_bg_color: 1, 1, 1, 0.05
                        text_color: 0.12, 0.73, 0.5, 1
                        on_press:
                            app.changeScreen("login")
